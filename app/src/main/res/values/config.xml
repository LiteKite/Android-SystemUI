<resources>

    <!--SystemUI Services: The classes of the stuff to start.-->
    <string-array name="config_systemUIServiceComponents" translatable="false">
        <item>com.litekite.systemui.power.Power</item>
        <item>com.litekite.systemui.systembar.base.SystemBars</item>
    </string-array>

    <!--Component to be used as the status bar service.  Must implement the IStatusBar
     interface.  This name is in the ComponentName flattened format (package/class)-->
    <string name="config_statusBarComponent" translatable="false">
        com.litekite.systemui.systembar.statusbar.StatusBar</string>

    <string-array name="config_navBarComponents">
        <item>com.litekite.systemui.systembar.navbar.BottomNavBar</item>
    </string-array>

    <!--StatusBar Container: Ordered Status Bar Icons-->
    <array name="config_status_bar_ordered_icons">
        <item>@id/iv_wifi_icon</item>
        <item>@id/iv_bt_icon</item>
        <item>@id/iv_signal_icon</item>
        <item>@id/iv_battery_icon</item>
    </array>

    <!--StatusBar Container: Status Bar Wifi Icons-->
    <array name="config_status_bar_wifi_icons">
        <item>@drawable/ic_wifi_0</item>
        <item>@drawable/ic_wifi_1</item>
        <item>@drawable/ic_wifi_2</item>
        <item>@drawable/ic_wifi_3</item>
        <item>@drawable/ic_wifi_4</item>
    </array>

    <!--StatusBar Container: Status Bar Battery Icons-->
    <array name="config_status_bar_battery_icons">
        <item>@drawable/ic_battery_0</item>
        <item>@drawable/ic_battery_1</item>
        <item>@drawable/ic_battery_2</item>
        <item>@drawable/ic_battery_3</item>
        <item>@drawable/ic_battery_4</item>
        <item>@drawable/ic_battery_5</item>
    </array>

    <!--StatusBar Container: Status Bar Signal Icons-->
    <array name="config_status_bar_signal_icons">
        <item>@drawable/ic_signal_0</item>
        <item>@drawable/ic_signal_1</item>
        <item>@drawable/ic_signal_2</item>
        <item>@drawable/ic_signal_3</item>
        <item>@drawable/ic_signal_4</item>
        <item>@drawable/ic_signal_5</item>
    </array>

</resources>